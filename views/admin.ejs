<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/favicon.png">

    <title><%= app.title %></title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <link href="/css/ie10-viewport-bug-workaround.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/css/index.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/sticky-footer.css" type="text/css" media="screen" title="no title" charset="">
    <link rel="stylesheet" href="/css/admin.css" type="text/css" media="screen" title="no title" charset="utf-8">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link rel="stylesheet" href="/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://bootswatch.com/<%= app.theme %>/bootstrap.min.css" type="text/css" media="screen" title="no title" charset="utf-8">
  </head>

  <body>

    <nav class="navbar navbar-<%= app.navbar.style %> navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="<%= app.home %>"><i class="fa fa-<%= app.logo %>"></i> <%= app.title %></a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><a href="<%= app.home %>"><i class="fa fa-home"></i> Home</a></li>
            <li><a href="#about"><i class="fa fa-users"></i> About</a></li>
            <li><a href="#contact"><i class="fa fa-envelope"></i> Contact</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="active">
              <a href="/profile"><i class="fa fa-user-circle fa-lg"></i>&nbsp; <%= team.local.username %></a>
            </li>
            <li>
              <form action="/logout" method="get" class="navbar-form navbar-right">&nbsp;
                <button type="submit" class="btn btn-success"><i class="fa fa-sign-out"></i> Sign out</button>
              </form>
            </li>
          </ul>
        </div><!--/.navbar-collapse -->
      </div>
    </nav>


    <div class="container">
      <div class="row">
        <div class="col-sm-12 main">
          <ul class="nav nav-pills" role="tablist">
            <li role="presentation">
              <a href="#users" aria-controls="users" role="tab" data-toggle="tab" onclick="loadDoc()">Users</a>
            </li>
            <li role="presentation">
              <a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Messages</a>
            </li>
            <li role="presentation">
              <a href="#news" aria-controls="news" role="tab" data-toggle="tab">News</a>
            </li>
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="text-left">
            <div class="tab-content">
              <div role="tabpanel" class= "tab-pane active" id="overview">
                <div class="text-center">
                  <div class="hidden-sm hidden-xs">
                    <br /> <br /> <br /> <br />
                  </div>
                  <h1>Admin Panel <br /><small> Manage the event like a boss</small></h1><br />
                </div>
              </div>
              <div role="tabpanel" class="tab-pane fade" id="users">
                <div class="text-left">
                  <h1>Users <small> All the wonderful users</small></h1><br />
                  <div id="loadUsers">
                    <br /> <br /> <br />
                    <i class="fa fa-cog fa-spin fa-5x fa-fw" id="content"></i>  
                  </div>
                </div>
              </div>
              <div role="tabpanel" class="tab-pane fade" id="messages">
                <div class="text-left">
                  <h1>Messages <small> Clarifying doubts is important</small></h1><br />
                  <div id="loadMessages">
                    <br /> <br /> <br />
                    <i class="fa fa-cog fa-spin fa-5x fa-fw" id="content"></i>  
                  </div>
                </div>
              </div>
              <div role="tabpanel" class="tab-pane fade" id="news">
                <div class="hidden-sm hidden-xs">
                </div>
                <h1>News <small> Keep and stay informed</small></h1><br />
                <div class="row">
                  <div class="col-md-6">
                    <form action="/admin/createNews" method="post" accept-charset="utf-8">
                      <div class="form-group">
                        <input type="text" name="title" value="" id="title" class="form-control" placeholder="Title"> <br />
                        <textarea name="content" class="form-control" placeholder="Place news here" rows="9"></textarea> <br />
                        <select name="level" id="level" size="1" class="form-control">
                          <option value="3">Normal</option>
                          <option value="2">Important</option>
                          <option value="1">Urgent</option>
                        </select> <br />
                        <input type="submit" value="submit" class="btn btn-primary btn-block" />
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="newsModal" tabindex="-1" role="dialog" aria-labelledby="newsModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="newsModalLabel">News Error</h4>
          </div>
          <div class="modal-body" id="newsModalContent">
            
          </div>
        </div>
      </div>
    </div>


    <!-- Bootstrap core JavaScript ========================================= -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="/js/jquery.min.js"><\/script>')</script>
    <script src="/js/bootstrap.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="/js/ie10-viewport-bug-workaround.js"></script>

    <!-- script for admin panel -->
    <script type="text/javascript" charset="utf-8" src="/js/adminPanel.js"></script>
    <script type="text/javascript" charset="utf-8">
      var status = window.location.search;
      if(status == '?newsEmpty'){
        document.getElementById('newsModalLabel').innerHTML = 'News update failed';
        document.getElementById('newsModalContent').innerHTML = 'The news fields cannot be empty';

        $('#newsModal').modal();
      }else if(status == '?newsFailed'){
        document.getElementById('newsModalLabel').innerHTML = 'News update failed';
        document.getElementById('newsModalContent').innerHTML = 'There was some error with the connection';

        $('#newsModal').modal();
      }else if(status == '?newsSuccess'){
        document.getElementById('newsModalLabel').innerHTML = 'News update successful';
        document.getElementById('newsModalContent').innerHTML = 'The news was published';

        $('#newsModal').modal();
      }
    </script>
  </body>
</html>
